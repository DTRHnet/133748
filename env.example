# 133748 Environment Variables
# Copy this file to .env and configure your settings

# Application Settings
NODE_ENV=production
LOG_LEVEL=info

# Netlify Settings
NETLIFY_SITE_ID=your-site-id
NETLIFY_ACCESS_TOKEN=your-access-token

# Chrome/Chromium Settings
CHROME_PATH=/usr/bin/google-chrome-stable
# Alternative paths for different platforms:
# Windows: C:\Program Files\Google\Chrome\Application\chrome.exe
# macOS: /Applications/Google Chrome.app/Contents/MacOS/Google Chrome
# Linux: /usr/bin/google-chrome-stable

# Ultimate Guitar Settings
UG_BASE_URL=https://www.ultimate-guitar.com
UG_SEARCH_ENDPOINT=/search.php

# Download Settings
DEFAULT_TABS_DIR=/tmp/133748-downloads
MAX_CONCURRENT_DOWNLOADS=3
REQUEST_TIMEOUT_MS=15000
PAGE_DELAY_MS=1000
MAX_SEARCH_PAGES=10

# Security Settings
CORS_ORIGIN=*
ALLOWED_DOMAINS=tabs.ultimate-guitar.com,www.ultimate-guitar.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Debug Settings
DEBUG=false
VERBOSE_LOGGING=false

# Feature Flags
ENABLE_SEARCH=true
ENABLE_DOWNLOAD=true
ENABLE_DEBUG_PANEL=true
ENABLE_API_DOCS=true

# Cache Settings
CACHE_TTL_MS=300000
ENABLE_CACHE=true

# Monitoring
ENABLE_METRICS=true
METRICS_ENDPOINT=/api/metrics
